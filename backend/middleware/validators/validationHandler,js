const { validationResult } = require('express-validator');

module.exports = (req, res, next) => {
  const errors = validationResult(req);

  if (!errors.isEmpty()) {
    // Pass error to your errorHandler.js
    return next({
      statusCode: 400,
      message: 'Validation failed',
      errors: errors.array()
    });
  }

  next();
};
